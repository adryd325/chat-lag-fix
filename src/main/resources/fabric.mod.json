{
  "schemaVersion": 1,
  "id": "chatlagfix",
  "version": "${version}",

  "name": "Chat lag fix",
  "description": "Fixes Minecraft client lag from receiving chat messages, at the expense of not being able to block players in chat.",
  "authors": [
    "adryd"
  ],
  "contact": {
    "homepage": "https://github.com/adryd325/chat-lag-fix",
    "sources": "https://github.com/adryd325/chat-lag-fix"
  },

  "license": "MIT",
  "icon": "assets/chatlagfix/icon.png",

  "environment": "*",
  "entrypoints": {
    "preLaunch": [
      "com.adryd.chatlagfix.ChatLagFixPreLaunch"
    ]
  },
  "mixins": [
    "chatlagfix.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.11.3",
    "minecraft": "1.17.x",
    "java": ">=16"
  }
}
